{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/",
    "pretty": true,
    "removeComments": true,
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["node"]
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
